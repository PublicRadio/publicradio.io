square(pseudo = 'before')
  &::{pseudo}
    content ''
    height 0
    padding-bottom 100%
    display inline-block

vingette-bg()
  background-size 0
  &::before
    content ''
    width 100%
    height 100%
    position absolute
    background-image inherit
    background-size cover
    background-repeat no-repeat
    background-position center
    box-shadow inset 0 0 100px rgba(0, 0, 0, 1)
